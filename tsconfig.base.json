{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["DOM", "ES2018", "ESNext.WeakRef"],
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
